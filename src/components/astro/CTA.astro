---
interface Props {
  title?: string;
  description?: string;
  ctaLabel?: string;
  ctaHref?: string;
  id?: string;
}

const {
  title = "Prêt à écouter le murmure ?",
  description = "Écrivons ensemble votre arrivée. Quelques lignes sur vos envies suffisent pour préparer la maison.",
  ctaLabel = "Écrire à Murmullo",
  ctaHref = "mailto:reservations@murmullo.com?subject=Séjour%20Murmullo",
  id,
} = Astro.props as Props;
---

<section id={id} class="section-shell py-16 sm:py-20 lg:py-24">
  <div class="rounded-[28px] bg-ink px-8 py-12 text-sand shadow-soft sm:px-12 lg:px-16 lg:py-14">
    <div class="flex flex-col gap-6 sm:flex-row sm:items-center sm:justify-between">
      <div class="space-y-3">
        <h2 class="text-3xl sm:text-4xl">{title}</h2>
        <p class="max-w-2xl text-base text-sand/80">{description}</p>
      </div>
      <a
        href={ctaHref}
        class="inline-flex items-center justify-center rounded-full bg-sand px-6 py-3 text-base font-semibold text-ink transition hover:-translate-y-0.5 hover:bg-mist focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sand"
      >
        {ctaLabel}
      </a>
    </div>
  </div>
</section>
