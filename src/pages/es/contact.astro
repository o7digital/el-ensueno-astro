---
import BaseLayout from "@/layouts/BaseLayout.astro";

const title = "Contacto | El Ensueño";
const description =
  "Planifica tu estancia en El Ensueño. Comunícate con nuestro equipo de reservaciones para suites, tarifas y experiencias a medida.";
const heroImage = "/images/hero/sous-hero/luxury-beach-villa-boutique-hotel-zihuatanejo-ixtapa-mexico-8.webp";
const mapImage = "/images/hero/contact/el-ensueno-map.webp";
const preloadImages = [heroImage, mapImage];
---

<BaseLayout
  title={title}
  description={description}
  ogImage={heroImage}
  preloadImages={preloadImages}
  currentLang="es"
>
  <div class="fixed inset-x-0 top-0 z-50 bg-white/95 backdrop-blur-sm shadow-md">
    <header class="container mx-auto flex items-center justify-between px-6 py-4 sm:px-10 sm:py-5">
      <a href="/es">
        <img
          src="/logo/logo.svg"
          alt="Logo de El Ensueño"
          class="h-12 w-auto object-contain"
        />
      </a>
      <nav class="hidden items-center gap-8 text-sm font-bold lg:flex">
        <a href="/es#home" class="uppercase tracking-wider transition-colors text-ink hover:text-ink/70">Inicio</a>
        <a href="/es#suites" class="uppercase tracking-wider transition-colors text-ink hover:text-ink/70">Suites</a>
        <a href="/es#palapa-beach-lounge" class="uppercase tracking-wider transition-colors text-ink hover:text-ink/70">Palapa Beach Lounge</a>
        <a href="/es#local-kitchen" class="uppercase tracking-wider transition-colors text-ink hover:text-ink/70">Cocina Local</a>
        <a href="/es/contact" class="uppercase tracking-wider transition-colors text-ink hover:text-ink/70">Contacto</a>
      </nav>
      <a
        href="https://be.synxis.com/?adult=1&arrive=2025-12-22&chain=22402&child=0&currency=USD&depart=2025-12-23&hotel=78821&level=hotel&locale=es-MX&productcurrency=USD&room=MUR&rooms=1&src=24C"
        class="inline-flex items-center gap-2 rounded-full px-5 py-2.5 text-sm font-semibold uppercase transition-all hover:-translate-y-0.5 bg-white text-ink hover:bg-white/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white border border-ink/20"
      >
        Reservar
      </a>
    </header>
  </div>

  <section class="pt-0">
    <div class="flex flex-col lg:flex-row">
      <div class="lg:w-[67%]">
        <img
          src={heroImage}
          alt="Alberca y palapa de El Ensueño"
          class="h-[360px] w-full object-cover sm:h-[460px] lg:h-full"
          loading="eager"
        />
      </div>
      <div class="lg:w-[33%] bg-[#020713] text-white px-6 sm:px-10 lg:pl-[80px] lg:pr-[15px] pt-16 sm:pt-24 lg:pt-[280px] pb-16 lg:pb-[120px]">
        <div class="max-w-md">
          <div class="lg:-ml-[150px]">
            <p class="font-script text-4xl sm:text-5xl lg:text-6xl text-white">Contacto</p>
            <div class="mt-3 flex items-center gap-2 text-[#d3a244]" aria-hidden="true">
              <svg class="h-3 w-3" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.5l2.9 6 6.6.9-4.8 4.6 1.1 6.5L12 17.8 6.2 20.5l1.1-6.5L2.5 9.4l6.6-.9L12 2.5z" />
              </svg>
              <svg class="h-3 w-3" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.5l2.9 6 6.6.9-4.8 4.6 1.1 6.5L12 17.8 6.2 20.5l1.1-6.5L2.5 9.4l6.6-.9L12 2.5z" />
              </svg>
              <svg class="h-3 w-3" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.5l2.9 6 6.6.9-4.8 4.6 1.1 6.5L12 17.8 6.2 20.5l1.1-6.5L2.5 9.4l6.6-.9L12 2.5z" />
              </svg>
              <svg class="h-3 w-3" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.5l2.9 6 6.6.9-4.8 4.6 1.1 6.5L12 17.8 6.2 20.5l1.1-6.5L2.5 9.4l6.6-.9L12 2.5z" />
              </svg>
              <svg class="h-3 w-3" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.5l2.9 6 6.6.9-4.8 4.6 1.1 6.5L12 17.8 6.2 20.5l1.1-6.5L2.5 9.4l6.6-.9L12 2.5z" />
              </svg>
            </div>
          </div>
          <h1 class="mt-8 text-4xl sm:text-5xl lg:text-6xl font-display text-white leading-tight">
            Diseñemos
            <span class="block">tu estancia en</span>
            <span class="block">El Ensueño</span>
          </h1>
          <div class="mt-10 space-y-6 border-t border-white/10 pt-6 text-base sm:text-[17px] text-white/85">
            <div class="flex items-start gap-3">
              <svg class="h-6 w-6 text-[#d3a244]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M4 6.75h16v10.5H4z" />
                <path d="m4 7 8 6 8-6" />
              </svg>
              <a
                href="mailto:sales.reservations@lacasaquecanta.com"
                class="text-white hover:text-white/80"
              >
                sales.reservations@lacasaquecanta.com
              </a>
            </div>
            <div class="flex items-start gap-3">
              <svg class="h-6 w-6 text-[#d3a244]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M2.5 6.5c0 8.3 6.7 15 15 15l3-3-4.5-4.5-3 3c-3.8-1.2-6.8-4.2-8-8l3-3L3.5 3.5z" />
              </svg>
              <div class="space-y-2">
                <a href="tel:+527555557000" class="block text-white hover:text-white/80">
                  +52 755 555 7000
                </a>
                <a href="tel:+525525641838" class="block text-white hover:text-white/80">
                  +52 55 2564 1838
                </a>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <svg class="h-6 w-6 text-[#d3a244]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M12 21s7-6.2 7-11a7 7 0 0 0-14 0c0 4.8 7 11 7 11z" />
                <circle cx="12" cy="10" r="2.5" />
              </svg>
              <p class="text-white/80 leading-relaxed">
                Camino Escénico en Playa La Ropa S / N, Playa La Ropa, 40880 Zihuatanejo, Guerrero, México
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-white">
    <div class="flex flex-col lg:flex-row lg:items-stretch">
      <div class="lg:w-1/2 px-6 sm:px-10 lg:px-16 py-12 lg:py-20">
        <div class="space-y-10">
          <div>
            <h2 class="text-4xl sm:text-5xl font-display text-ink">¿Tienes alguna pregunta?</h2>
            <p class="mt-4 text-base text-ink/70 max-w-xl">
              Comparte algunos detalles sobre tu estancia. Te responderemos en un día hábil.
            </p>
          </div>

          <form id="contact-form" class="space-y-8">
            <div class="grid gap-8 sm:grid-cols-2">
              <input
                class="w-full border-b border-ink/30 bg-transparent py-4 text-base text-ink placeholder:text-ink/50 focus:border-ink focus:outline-none"
                type="text"
                name="name"
                placeholder="Nombre"
                required
              />
              <input
                class="w-full border-b border-ink/30 bg-transparent py-4 text-base text-ink placeholder:text-ink/50 focus:border-ink focus:outline-none"
                type="email"
                name="email"
                placeholder="Correo"
                required
              />
            </div>
            <div class="grid gap-8 sm:grid-cols-2">
              <input
                class="w-full border-b border-ink/30 bg-transparent py-4 text-base text-ink placeholder:text-ink/50 focus:border-ink focus:outline-none"
                type="tel"
                name="phone"
                placeholder="Teléfono"
                required
              />
              <input
                class="w-full border-b border-ink/30 bg-transparent py-4 text-base text-ink placeholder:text-ink/50 focus:border-ink focus:outline-none"
                type="text"
                name="subject"
                placeholder="Asunto"
                required
              />
            </div>
            <textarea
              class="w-full border-b border-ink/30 bg-transparent py-4 text-base text-ink placeholder:text-ink/50 focus:border-ink focus:outline-none"
              rows="6"
              name="message"
              placeholder="Mensaje"
              required
            ></textarea>
            <button
              type="submit"
              class="w-full sm:w-auto rounded-none bg-ink px-12 py-4 text-xs font-semibold uppercase tracking-[0.3em] text-sand transition hover:-translate-y-0.5"
            >
              Enviar
            </button>
          </form>
        </div>
      </div>

      <div class="lg:w-1/2">
        <div class="h-[340px] sm:h-[460px] lg:h-full lg:min-h-[680px] bg-sand/60">
          <img
            src={mapImage}
            alt="Mapa de El Ensueño"
            class="h-full w-full object-cover"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

</BaseLayout>
