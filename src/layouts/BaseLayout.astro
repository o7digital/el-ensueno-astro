---
import "@/styles/global.css";
import Footer from "@/components/astro/Footer.astro";
import Header, { headerSuites } from "@/components/react/Header";
import defaultOgImage from "@/assets/images/hero/contact/el-ensueno-pool.webp";
import { getResponsiveImage } from "@/utils/responsive-images";

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  preloadImages?: string[];
  structuredData?: Record<string, unknown>;
  currentLang?: string;
}

const {
  title,
  description,
  ogImage = defaultOgImage.src,
  preloadImages = [],
  structuredData,
  currentLang = "en",
} = Astro.props as Props;

const suiteImageMap = Object.fromEntries(
  await Promise.all(
    headerSuites.map(async (suite) => [
      suite.image,
      await getResponsiveImage(suite.image, {
        widths: [240, 360, 480],
        sizes: "300px",
      }),
    ]),
  ),
);

const canonical = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : Astro.url.pathname;
const ogImageUrl = Astro.site ? new URL(ogImage, Astro.site).toString() : ogImage;
const ogLocale = currentLang === "es" ? "es_MX" : "en_US";
const path = Astro.url.pathname;
const englishPath = currentLang === "es" ? path.replace(/^\/es(\/|$)/, "/") : path;
const spanishPath = currentLang === "es" ? path : path === "/" ? "/es" : `/es${path}`;
const englishUrl = Astro.site ? new URL(englishPath, Astro.site).toString() : englishPath;
const spanishUrl = Astro.site ? new URL(spanishPath, Astro.site).toString() : spanishPath;
const alternateLocale = currentLang === "es" ? "en_US" : "es_MX";
---

<!DOCTYPE html>
<html lang={currentLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0f1411" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&family=Sora:wght@300;400;500;600&family=WindSong:wght@400&display=swap"
      media="print"
      onload="this.media='all'"
    />
    {preloadImages.map((src) => (
      <link rel="preload" as="image" href={src} />
    ))}
    <title>{title}</title>
    <link rel="canonical" href={canonical} />
    <link rel="alternate" hrefLang="en" href={englishUrl} />
    <link rel="alternate" hrefLang="es" href={spanishUrl} />
    <link rel="alternate" hrefLang="x-default" href={englishUrl} />

    <meta property="og:type" content="website" />
    <meta property="og:locale" content={ogLocale} />
    <meta property="og:locale:alternate" content={alternateLocale} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    {structuredData && (
      <script type="application/ld+json">
        {JSON.stringify(structuredData)}
      </script>
    )}
  </head>
  <body class="min-h-screen bg-sand text-ink">
    <Header client:load currentLang={currentLang} suiteImages={suiteImageMap} />
    <main id="contenu" class="relative isolate overflow-hidden">
      <slot />
    </main>
    <Footer currentLang={currentLang} />
  </body>
</html>
